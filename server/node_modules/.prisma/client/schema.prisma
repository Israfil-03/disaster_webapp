generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String
  role      String   @default("citizen") // citizen, authority, ndrf, ngo
  createdAt DateTime @default(now())
  alerts    Alert[]
  reports   Report[]
}

model Alert {
  id        Int      @id @default(autoincrement())
  hazard    String
  severity  String
  message   String
  state     String?
  district  String?
  area      String
  lat       Float?
  lng       Float?
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
}

model Report {
  id          Int      @id @default(autoincrement())
  type        String
  description String
  location    String
  contact     String?
  status      String   @default("Pending") // Pending, Verified, Rejected
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}

model Volunteer {
  id                Int      @id @default(autoincrement())
  fullName          String
  email             String
  phone             String
  skills            String[]
  availability      String
  preferredLocation String?
  motivation        String?
  status            String   @default("pending") // pending, approved, rejected
  createdAt         DateTime @default(now())
}

model Resource {
  id        Int     @id @default(autoincrement())
  name      String
  type      String // shelter, hospital, food, supply
  capacity  Int?
  available Int?
  lat       Float?
  lng       Float?
  contact   String?
  details   String?
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  text      String
  userName  String
  userRole  String
  createdAt DateTime @default(now())
}
